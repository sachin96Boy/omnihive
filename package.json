{
    "name": "root",
    "private": true,
    "workspaces": [
        "src/packages/*",
        "src/custom/*"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/WithOneVisionTechnologies/omnihive.git"
    },
    "scripts": {
        "build:debug": "yarn node --inspect=127.0.0.1:9228 --trace-warnings -r ts-node/register ./build.ts",
        "build": "yarn node -r ts-node/register ./build.ts",
        "cli:debug": "cd src/packages/omnihive && yarn run cli:debug",
        "cli:taskRunner:debug": "cd src/packages/omnihive && yarn run cli:taskRunner:debug",
        "doctor": "yarn dlx @yarnpkg/doctor",
        "server:debug": "cd src/packages/omnihive && yarn run server:debug",
        "server:debug:noAdmin": "cd src/packages/omnihive && yarn run watch:node",
        "test": "omnihive_test_settings=\"./settings/omnihive_test_config.json\" nyc --reporter=html mocha -r ts-node/register 'src/packages/**/tests/**/*.ts' --inspect=127.0.0.1:9228 --timeout 5000 --retries 5 --colors",
        "test:custom": "omnihive_test_settings=\"./settings/omnihive_test_config.json\" nyc mocha -r ts-node/register 'src/custom/**/tests/**/*.ts' --inspect=127.0.0.1:9228 --timeout 5000 --retries 5 --colors"
    },
    "devDependencies": {
        "@elastic/elasticsearch": "7.11.0",
        "@istanbuljs/nyc-config-typescript": "1.0.1",
        "@types/chai": "4.2.15",
        "@types/figlet": "1.2.1",
        "@types/fs-extra": "9.0.8",
        "@types/mocha": "8.2.1",
        "@types/node": "14.14.34",
        "@types/semver": "7.3.4",
        "@types/yargs": "16.0.0",
        "@typescript-eslint/eslint-plugin": "4.17.0",
        "@typescript-eslint/parser": "4.17.0",
        "chai": "4.3.3",
        "chalk": "4.1.0",
        "cross-env": "7.0.3",
        "dayjs": "1.10.4",
        "eslint": "7.21.0",
        "eslint-config-prettier": "8.1.0",
        "eslint-plugin-prettier": "3.3.1",
        "figlet": "1.5.0",
        "fs-extra": "9.1.0",
        "mocha": "8.3.2",
        "nodemon": "2.0.7",
        "nyc": "15.1.0",
        "prettier": "2.2.1",
        "read-pkg-up": "7.0.1",
        "replace-in-file": "6.2.0",
        "semver": "7.3.4",
        "serialize-error": "8.0.1",
        "source-map-support": "0.5.19",
        "ts-node": "9.1.1",
        "typescript": "4.2.3",
        "write-pkg": "4.0.0",
        "yargs": "16.2.0"
    }
}
