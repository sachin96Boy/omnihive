{
    "name": "root",
    "private": true,
    "version": "6.2.27",
    "workspaces": [
        "src/packages/*",
        "src/custom/*"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/WithOneVisionTechnologies/omnihive.git"
    },
    "config": {
        "commitizen": {
            "path": "cz-conventional-changelog"
        }
    },
    "scripts": {
        "build": "yarn node -r ts-node/register ./build.ts",
        "build:custom": "yarn node -r ts-node/register ./buildCustom.ts",
        "build:debug": "yarn node --inspect=127.0.0.1:9228 --trace-warnings -r ts-node/register ./build.ts -d",
        "cli:debug": "cd src/packages/omnihive-cli && yarn run cli:debug",
        "commit": "cz",
        "doctor": "yarn dlx @yarnpkg/doctor@2.1.3",
        "husky": "husky install",
        "release": "standard-version",
        "release:dry-run": "standard-version --dry-run",
        "server:debug": "cd src/packages/omnihive && yarn run server:debug",
        "taskRunner:debug": "cd src/packages/omnihive && yarn run cli:taskRunner:debug",
        "test": "omnihive_test_settings=\"./settings/omnihive_test_config.json\" nyc --reporter=html mocha -r ts-node/register 'src/packages/**/tests/**/*.ts' --inspect=127.0.0.1:9228 --timeout 5000 --retries 5 --colors",
        "test:custom": "omnihive_test_settings=\"./settings/omnihive_test_config.json\" nyc mocha -r ts-node/register 'src/custom/**/tests/**/*.ts' --inspect=127.0.0.1:9228 --timeout 5000 --retries 5 --colors"
    },
    "dependencies": {
        "src": "link:./src"
    },
    "devDependencies": {
        "@commitlint/cli": "13.0.0",
        "@commitlint/config-conventional": "13.0.0",
        "@istanbuljs/nyc-config-typescript": "1.0.1",
        "@types/chai": "4.2.18",
        "@types/figlet": "1.5.1",
        "@types/fs-extra": "9.0.11",
        "@types/mocha": "8.2.2",
        "@types/node": "15.6.1",
        "@types/sinon": "10.0.1",
        "@types/tar": "4.0.4",
        "@types/yargs": "17.0.0",
        "@typescript-eslint/eslint-plugin": "4.25.0",
        "@typescript-eslint/parser": "4.25.0",
        "axios": "0.21.1",
        "chai": "4.3.4",
        "chalk": "4.1.1",
        "commitizen": "4.2.4",
        "cz-conventional-changelog": "3.3.0",
        "dayjs": "1.10.5",
        "dotenv": "10.0.0",
        "enquirer": "2.3.6",
        "eslint": "7.27.0",
        "eslint-config-prettier": "8.3.0",
        "eslint-plugin-prettier": "3.4.0",
        "execa": "5.0.0",
        "express": "4.17.1",
        "figlet": "1.5.0",
        "fs-extra": "10.0.0",
        "husky": "6.0.0",
        "jsdom": "16.6.0",
        "jsdom-global": "3.0.2",
        "listr2": "3.9.0",
        "mocha": "8.4.0",
        "nodemon": "2.0.7",
        "nyc": "15.1.0",
        "prettier": "2.3.0",
        "read-pkg-up": "7.0.1",
        "replace-in-file": "6.2.0",
        "serialize-error": "8.1.0",
        "sinon": "11.1.1",
        "socket.io": "4.1.2",
        "source-map-support": "0.5.19",
        "standard-version": "9.3.0",
        "tar": "6.1.0",
        "ts-node": "10.0.0",
        "typescript": "4.2.4",
        "write-pkg": "4.0.0",
        "yargs": "17.0.1"
    }
}
